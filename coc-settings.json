{
	"coc.preferences.formatOnSaveFiletypes": [
     "go"
  ],
  "languageserver": {
		"terraform": {
			"command": "terraform-ls",
			"args": [
        "serve"
      ],
      "filetypes": [
				"terraform",
				"tf"
			]
		},
    "golang": {
      "go.goplsOptions": {
        "completeUnimported": true
      },
      "suggest.noselect":false,
      "suggest.preferCompleteThanJumpPlaceholder":true,
      "command": "gopls",
      "rootPatterns": ["go.work", "go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    }
	}
}

